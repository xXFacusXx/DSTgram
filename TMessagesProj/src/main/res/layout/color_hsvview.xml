<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android" android:minHeight="400dip" android:minWidth="400dip"
	android:layout_width="match_parent" android:layout_height="match_parent" android:orientation="vertical">
	<LinearLayout android:padding="10dip" android:layout_width="fill_parent" android:layout_height="fill_parent" orientation="horizontal">
		<org.telegram.ui.Color.HsvAlphaSelectorView
			android:id="@+id/color_hsv_alpha" android:layout_weight="0" android:layout_width="30dip" android:layout_height="fill_parent"></org.telegram.ui.Color.HsvAlphaSelectorView>
		<org.telegram.ui.Color.HsvColorValueView
			android:id="@+id/color_hsv_value" android:layout_weight="1" android:layout_marginLeft="10dip" android:layout_marginRight="5dip" android:layout_width="fill_parent" android:layout_height="fill_parent">
		</org.telegram.ui.Color.HsvColorValueView>
		<org.telegram.ui.Color.HsvHueSelectorView
			android:id="@+id/color_hsv_hue" android:layout_weight="0" android:layout_width="30dip" android:layout_height="fill_parent"></org.telegram.ui.Color.HsvHueSelectorView>
	</LinearLayout>
</LinearLayout>
